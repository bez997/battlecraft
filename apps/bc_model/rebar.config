
%% Options %%
{erl_opts, [debug_info]}.

%% Dependencies %%
{deps, [
	{boss_db, {git, "https://github.com/ErlyORM/boss_db.git", {tag, "v0.8.16.1"}}}
]}.

%% Plugins %%
{plugins, [
	{boss_db_plugin, {git, "https://jbreindel@bitbucket.org/jbreindel/boss_db_plugin.git", {branch, "master"}}}
]}.

